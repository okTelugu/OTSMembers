@{
    ViewBag.Title = "Current Members List";
}
@if (Request.IsAuthenticated && (User.IsInRole("Administrator") || User.IsInRole("Committee")))
{
<div class="container">
    <h2> Obtain members list :</h2>
    <form class="form-horizontal" role="form" method="get" action="@Url.Action("PaidMembersList")">
        <div class="form-group">
            <label class="control-label col-sm-2" for="amount">Annual Membership:</label>
            <div class="col-sm-10">
                <input type="number" step="0.01" class="form-control" name="amount" placeholder="Enter annual membership fee:" value="30.00" required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="fromDate">Membership period start date:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" name="fromDate" placeholder="Membership period start date:" value="2015-01-01" required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="toDate">Membership period end date:</label>
            <div class="col-sm-10 ui-datepicker">
                <input type="date" class="form-control" name="toDate" placeholder="Membership period end date:" value="2015-12-31" required>
            </div>
        </div>
        @*<div class="form-group">
            <label class="control-label col-sm-2" for="year">Membership year:</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="year" placeholder="Membership year:">
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
    <p>
        
       @*@Html.Action("PaidMembersList", new {year= year,amount=amount,fromDate=fromDate,toDate=toDate })*@
    </p>
}

