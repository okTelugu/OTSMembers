@model OTSMembers.Models.OtsMember

@{
    ViewBag.Title = "Details";
}

<h2>Member Details</h2>

<div>
    <h4> @Html.DisplayFor(model => model.FirstName), @Html.DisplayFor(model => model.LastName) </h4>
    <hr />
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.FirstName)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.FirstName)</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.LastName)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.LastName)</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.SpouseName)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.SpouseName)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Email)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.StreetAddress)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.StreetAddress)</p>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.City)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.City)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.State)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.State)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Zip)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.Zip)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Notes)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.Notes)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.OkToPublish)</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(model => model.OkToPublish)</p>
            </div>
        </div>
</form>
</div>

<p>
    <a class="btn-lg" href=@Url.Action("Create", "MemberSponsorships", new { memberId = Model.id })> Renew your membership here. </a>
</p>

<p>
    @Html.ActionLink("Edit Member Information", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to Search", "Index")
</p>
<h3>Sponsorship History</h3>
<hr />
    @Html.Action("Sponsorships",new{memberId = Model.id})

<hr />