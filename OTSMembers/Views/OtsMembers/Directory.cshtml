@model IEnumerable<OTSMembers.Models.OtsMember>

@{
    ViewBag.Title = "Member Directory";
}

<h2>Oklahoma Telugu Sangham</h2>
<h3>Member Directory</h3>
<div class="row">
    <form class="nameForm input-group-lg" role="search" method="post">
        <div class="col-md-6">
            <div class="form-group">
                <label>Search Directory by Name</label>
                <input type="text" class="form-control" placeholder="First Name" name="firstName">
                <input type="text" class="form-control" placeholder="Last Name" name="lastName">
                <button type="submit" class="btn-success">Search</button>
            </div>
        </div>
    </form>
    <form class="emailForm input-group-lg" role="search" method="post">
        <div class="col-md-6">
            <div class="form-group">
                <br />
                <label>Search Directory by Email</label>
                <input type="email" class="form-control" placeholder="Enter Email" name="searchEmail">
                <button type="submit" class="btn-success">Search</button>
            </div>
        </div>
    </form>
</div>
@if (Model != null)
{
        <table id="directoryTable" class=" = table table-hover">
            <thead>

                <tr>
                    @if (Model.Count() > 0)
                    {
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>

                        </th>
                    }

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.id })
                        </td>
                    </tr>
                }
             </tbody>

</table>
}
<hr />
<label class="alert-info">
  If you want to report any incorrect or missing information, please email us at <a href="mailto:president@oktelugu.org?Subject=Member%20Directory" target="_top">president@oktelugu.org</a>.
</label>
